@page
@model PricingModel
@{
    ViewData["Title"] = "Pricing";
}

<section class="section">
    <div class="container">
        <h1 class="title">Pricing</h1>
        <div class="columns">
            <div class="column">
                <div class="box">
                    <h2 class="title">Basic Plan</h2>
                    <p>$9.99 per month</p>
                    <p>Includes basic monitoring and basic email reporting features.</p>
                    <a class="button is-primary" href="#">Choose Basic</a>
                </div>
            </div>
            <div class="column">
                <div class="box">
                    <h2 class="title">Pro Plan</h2>
                    <p>$29.99 per month</p>
                    <p>Includes advanced monitoring, reporting, and priority support.</p>
                    <a class="button is-primary" href="#">Choose Pro</a>
                </div>
            </div>
            <div class="column">
                <div class="box">
                    <h2 class="title">Enterprise Plan</h2>
                    <p>Contact us for pricing</p>
                    <p>Includes all features with custom solutions and dedicated support.</p>
                    <a class="button is-primary" href="#">Contact Us</a>
                </div>
            </div>
        </div>
    </div>
</section>
